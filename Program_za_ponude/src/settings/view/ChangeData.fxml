<!--FXML with table that shows saved treatments with corresponding prices and discount. Also makes possible to import
new data from csv file or to add data in the table.-->

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="settings.ChangeDataController">
  <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints maxHeight="74.0" minHeight="0.0" prefHeight="18.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="198.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="361.0" minHeight="10.0" prefHeight="335.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="93.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="93.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="43.0" minHeight="3.0" prefHeight="14.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="table" editable="true" prefHeight="343.0" prefWidth="700.0" GridPane.columnSpan="3" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="50.0" right="50.0" />
         </GridPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.rowIndex="1">
         <children>
            <Label text="Jezik 1:" />
            <MenuButton fx:id="language1" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Hrvatski">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage1" text="Engleski Općenito" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage1" text="Engleski UK" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage1" text="Hrvatski" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage1" text="Njemački" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage1" text="Talijanski" />
               </items>
            </MenuButton>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <children>
            <Label text="Jezik 2:" />
            <MenuButton fx:id="language2" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Talijanski">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage2" text="Engleski Općenito" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage2" text="Engleski UK" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage2" text="Hrvatski" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage2" text="Njemački" />
                  <MenuItem mnemonicParsing="false" onAction="#setLanguage2" text="Talijanski" />
               </items>
            </MenuButton>
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#saveData" prefWidth="150.0" text="Spremi" GridPane.columnIndex="2" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets right="60.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#goBack" prefWidth="150.0" text="Nazad" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="60.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#addNewRow" prefWidth="150.0" text="Dodaj red" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
      <Button mnemonicParsing="false" onAction="#deleteRow" prefWidth="150.0" text="Obriši red" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
   </children>
</GridPane>
