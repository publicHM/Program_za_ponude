<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<!--FXML for settings screen that holds buttons for opening screens to manipulate treatments, company and database
location data.-->

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onDragDetected="#goBack" prefHeight="530.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="settings.SettingsController">
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Button mnemonicParsing="false" onAction="#goBack" prefWidth="200.0" text="Nazad" GridPane.halignment="LEFT" GridPane.rowIndex="6" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets left="60.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#saveDatabaseLocation" prefWidth="200.0" text="Spremi" GridPane.rowIndex="2" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets left="50.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#openChangeData" prefWidth="200.0" text="Promijeni podatke" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button mnemonicParsing="false" onAction="#databaseRestart" prefWidth="200.0" text="Restartiraj bazu" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Label text="Lokacija baze:" GridPane.halignment="LEFT" GridPane.valignment="BOTTOM">
         <GridPane.margin>
            <Insets left="50.0" />
         </GridPane.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#databaseBackup" prefWidth="200.0" text="Napravi backup baze" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <TextField fx:id="databaseLocation" prefWidth="200.0" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="50.0" />
         </GridPane.margin>
      </TextField>
      <Button mnemonicParsing="false" onAction="#uploadData" prefWidth="200.0" text="Učitaj podatke iz .CSV-a" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Label text="Podaci o zahvatima" GridPane.columnIndex="2" GridPane.valignment="BOTTOM" />
      <Button mnemonicParsing="false" onAction="#changeCompanyInfo" prefWidth="200.0" text="Promijeni podatke" GridPane.rowIndex="3" />
      <Label text="Podaci o poduzeću:" GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
         <GridPane.margin>
            <Insets left="50.0" />
         </GridPane.margin>
      </Label>
      <Label text="Dodaj korisnika:" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets left="50.0" top="10.0" />
         </GridPane.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#addUser" prefWidth="200.0" text="Dodaj korisnika" GridPane.rowIndex="4" GridPane.valignment="BOTTOM" />
   </children>
</GridPane>
