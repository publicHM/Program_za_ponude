      <Button layoutX="319.0" layoutY="298.0" mnemonicParsing="false" onAction="#logIn" prefWidth="100.0" text="Prijava" />
      <ImageView fitHeight="96.0" fitWidth="147.0" layoutX="68.0" layoutY="46.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/logo.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="97.0" fitWidth="116.0" layoutX="434.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/OtherImage.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="passwordField" layoutX="220.0" layoutY="235.0" onKeyPressed="#logInOnEnterPressed" prefWidth="200.0" promptText="admin" />
   </children>
</AnchorPane>
